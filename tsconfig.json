{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", ".eslintrc.js"]
}
